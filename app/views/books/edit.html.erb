<!DOCTYPE html>
<body>
<h1>Editind Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
 <%= render 'layouts/error_messages', book: @book %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>

</body>